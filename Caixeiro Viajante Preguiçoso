#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <time.h>
#include <limits.h>


//armazenando a distancia entre as cidades
	int main()
	{
		setlocale(LC_ALL, "");
		int cidades[30][30];
	    
	    //entrada das distancias
		for (int i = 0; i <30; ++i)
		{
			for (int j = 0; j <30; ++j)
			{   
				if(i!=j && j>i)
				{
				printf("Qual a distancia da cidade %d e a cidade %d?\n", i+1 , j+1);
				scanf("%d", &cidades[i][j]);
				}else if(i == j)
				{
					cidades[i][j]= 0;
				}else if(j<i)
				{
					cidades[i][j]=cidades[j][i];
				}
			}
		}
		
		//printar distancias
		for (int i = 0; i <30; ++i)
		{
			for (int j = 0; j <30; ++j)
			{   
				printf("Distancia da cidade %d e %d é %d \n",i+1,j+1,cidades[i][j]);
			}		
		}
		
		
	return 0;
	}
